{
  "name": "PreChess",
  "version": "1.0.0",
  "description": "Gandharv learns the MERN stack!",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "npx prettier --write . && nodemon backend/server.js",
    "client": "npx prettier --write . && npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm install run build --prefix frontend"
  },
  "author": "Gandharv More",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.9"
  },
  "devDependencies": {
    "concurrently": "^7.2.1",
    "nodemon": "^2.0.15"
  }
}
